{% extends "_layouts/auth.njk" %}

{% block body %}
  <form action="/signup" method="post" enctype="multipart/form-data">
    <label for="avatar">
      <img src="/images/avatar.svg" alt="" height="24"/>
    </label>

    <input type="file" id="avatar" name="avatar"/>

    <input type="text" id="name" name="name" placeholder="Nome Completo" />
    <input type="email" id="email" name="email" placeholder="Seu e-mail" />
    <input type="password" id="password" name="password" placeholder="Sua senha" />

    <label for="provider">
      <input type="checkbox" id="provider" name="provider" value="1"/>
      Sou cabelereiro
    </label>

    <button type="submit">Criar conta</button>

    <a href="/">Ja possuo conta</a>
  </form>


<script type="text/javascript">
  var avatarInput = document.getElementById('avatar')
  var img = document.querySelector('label[for=avatar] img')

  avatarInput.onchange = function(e) {
    img.classList.add('preview')
    img.src = URL.createObjectURL(e.target.files[0])
  }
</script>


{% endblock %}
